		function wraptop(inObj, inId){
			var outString = "";
			var count = 1;
			_.each(inObj, function(top){
				if(top.entityId != null){ 
					outString += '<a href="{!$Page.CommunityTopic}?id='+top.id+'&pid={!parentId}">'+top.name.replace(/</g,"&lt;").replace(/>/g,"&gt;")+'</a>, ';
				}
			});
